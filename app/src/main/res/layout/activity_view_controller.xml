<RelativeLayout
    android:id="@+id/content_viewgroup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewControllerActivity">

    <ImageView
        android:id="@+id/video_poster"
        android:layout_width="@dimen/video_display_poster_width"
        android:layout_height="@dimen/video_display_poster_height"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />

    <TextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/video_poster"
        android:textColor="@color/video_title_color"
        android:textSize="@dimen/abc_text_size_title_material"/>

    <TextView
        android:id="@+id/video_content_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_title"
        android:layout_marginTop="@dimen/video_information_text_view_inset_margin"
        android:layout_toRightOf="@+id/video_poster"
        android:textColor="@color/general_video_information_text_color"
        android:textSize="@dimen/abc_text_size_subhead_material"/>

    <TextView
        android:id="@+id/video_runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_title"
        android:layout_marginLeft="@dimen/video_information_text_view_inset_margin"
        android:layout_marginTop="@dimen/video_information_text_view_inset_margin"
        android:layout_toRightOf="@+id/video_content_rating"
        android:textColor="@color/general_video_information_text_color"
        android:textSize="@dimen/abc_text_size_subhead_material"/>

    <TextView
        android:id="@+id/video_critic_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_content_rating"
        android:layout_marginTop="@dimen/video_information_text_view_inset_margin"
        android:layout_toRightOf="@+id/video_poster"
        android:textColor="@color/general_video_information_text_color"
        android:textSize="@dimen/abc_text_size_subhead_material"/>

    <TextView
        android:id="@+id/video_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_poster"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textColor="@color/general_video_information_text_color"
        android:textSize="@dimen/abc_text_size_subhead_material"
        />

</RelativeLayout>
